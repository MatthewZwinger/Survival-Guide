<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
            android:key="confirm_exit"
            android:title="Confirm Exit on Back Button"
            android:defaultValue="false"/>
    <CheckBoxPreference
            android:key="use_drawer"
            android:title="Use the Navigation Drawer"
            android:defaultValue="false"/>
    <CheckBoxPreference
            android:key="close_drawer_on_click"
            android:title="Close Drawer on Item Click"
            android:defaultValue="true"
            android:dependency="use_drawer"/>
</PreferenceScreen>